def ValidaNumeroDigitadoParaTabuada():
 i = 0
 numero = 0
 while i == 0:
  string = str(input('Digite um numero para saber a tabuada:'))
 
  if string.isnumeric():
   numero = int(string)
   i =1
  else:
   print('Erro, digite um numero inteiro valido!! ')
   i = 0
   
def PrintaNaTelaTabuadaNumeroDigitado():
 x = 0
 while x < 11:
  print(numero, 'x', x, '=', numero *x)
  x += 1
    
    


ValidaNumeroDigitadoParaTabuada()
PrintaNaTelaTabuadaNumeroDigitado()
